<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yingwu.project.mapper.UserDepartmentMapper">

    <resultMap id="BaseResultMap" type="com.yingwu.project.model.entity.UserDepartment">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="userId" column="user_id" jdbcType="BIGINT"/>
            <result property="departmentId" column="department_id" jdbcType="BIGINT"/>
            <result property="gmtCreate" column="gmt_create" jdbcType="TIMESTAMP"/>
            <result property="gmtModified" column="gmt_modified" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,user_id,department_id,
        gmt_create,gmt_modified
    </sql>

    <delete id="removeBatch">
        delete from user_department where
        <foreach collection="deleteUserDepartmentBatch" item="item" separator=" or " index="index">
            (user_id = #{item.userId} and department_id = #{item.departmentId})
        </foreach>
    </delete>

    <delete id="removeBatchByUserIdList">
        delete from user_department where
        <foreach collection="deleteUserIdBatch" item="id" separator=" or " index="index">
            (user_id = #{id})
        </foreach>
    </delete>

    <delete id="removeBatchByDepartmentIdList">
        delete from user_department where
        <foreach collection="deleteDepartmentIdBatch" item="id" separator=" or " index="index">
            (department_id = #{id})
        </foreach>
    </delete>

</mapper>
